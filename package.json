{
  "name": "claro-monorepo",
  "version": "1.0.0",
  "description": "Claro Project Management - Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "start:web": "turbo run dev --filter=@claro/web",
    "start:mobile": "turbo run dev --filter=@claro/mobile",
    "start:api": "turbo run dev --filter=@claro/api",
    "build:web": "turbo run build --filter=@claro/web",
    "build:mobile": "turbo run build --filter=@claro/mobile",
    "build:api": "turbo run build --filter=@claro/api",
    "db:generate": "turbo run db:generate --filter=@claro/api",
    "db:migrate": "turbo run db:migrate --filter=@claro/api",
    "db:seed": "turbo run db:seed --filter=@claro/api",
    "db:studio": "turbo run db:studio --filter=@claro/api",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "turbo run install",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/compression": "^1.8.1",
    "@types/node": "^20.0.0",
    "prettier": "^3.0.0",
    "turbo": "^1.12.4",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@9.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/claro-app/claro.git"
  },
  "keywords": [
    "project-management",
    "task-management",
    "productivity",
    "freelancer",
    "small-business",
    "react-native",
    "react",
    "nodejs",
    "typescript",
    "monorepo"
  ],
  "author": "Claro Team",
  "license": "MIT"
}
